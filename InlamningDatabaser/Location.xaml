<Window x:Class="InlamningDatabaser.Location"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InlamningDatabaser"
        mc:Ignorable="d"
        Title="Location" Height="100" Width="300" WindowStartupLocation="CenterScreen" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="Stad:" />
        <Button x:Name="btnCancel" Grid.Row="1" Content="Avbryt" Click="btnCancel_Click"/>
        <TextBox x:Name="tboxTown" Grid.Row="0" Grid.Column="1"/>
        <Button x:Name="btnSave" Grid.Row="1" Grid.Column="1" Content="Spara" Click="btnSave_Click"/>
    </Grid>
</Window>
